# ---- Global ----
TZ=Europe/Berlin

# ---- Domains (replace with your real hostnames) ----
NEXTCLOUD_DOMAIN=cloud.example.com
MATOMO_DOMAIN=matomo.example.com
TRAEFIK_DOMAIN_TRAEFIK=traefik.example.com   # optional dashboard; can delete if unused

# ---- Traefik / ACME ----
TRAEFIK_EMAIL=me@mreis.me
TRAEFIK_DASHBOARD_USER=admin
# Use a bcrypt hash (see step 4.2). Example placeholder below:
TRAEFIK_DASHBOARD_PASS_HASH=\$2y\$05\$replace_this_with_bcrypt_hash

# ---- Nextcloud bootstrap ----
NEXTCLOUD_ADMIN_USER=admin
NEXTCLOUD_ADMIN_PASSWORD=change-me
NEXTCLOUD_TRUSTED_DOMAINS=cloud.example.com
NEXTCLOUD_UPLOAD_LIMIT=2048M

# ---- MariaDB ----
MARIADB_ROOT_PASSWORD=change-me-root
MARIADB_NEXTCLOUD_DB=nextcloud
MARIADB_NEXTCLOUD_USER=nc_user
MARIADB_NEXTCLOUD_PASSWORD=change-me-nc
MARIADB_MATOMO_DB=matomo
MARIADB_MATOMO_USER=mtm_user
MARIADB_MATOMO_PASSWORD=change-me-mtm
